<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.mcft.sumoremote"
    android:versionCode="7"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.TRANSMIT_IR" />
    <!--uses-feature android:name="android.hardware.consumerir"/-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="eu.mcft.sumoremote.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.mcft.sumoremote.AboutActivity"
            android:label="@string/action_about"
            android:screenOrientation="portrait" />
        <activity
            android:name="eu.mcft.sumoremote.SetPreferenceActivity"
            android:label="@string/action_preferences"
            android:screenOrientation="portrait" />
        <activity
            android:name="eu.mcft.sumoremote.CustomCommandsActivity"
            android:label="@string/action_custom_commands"
            android:screenOrientation="portrait" />
        <activity
            android:name="eu.mcft.sumoremote.NewCommandActivity"
            android:label="@string/action_add_command"
            android:screenOrientation="portrait" />  
    </application>

</manifest>
